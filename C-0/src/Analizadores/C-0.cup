    {
        cuentaDirecciones++;
        codigoIntermedio.guardarCuadrupla(new Cuadrupla("CARGAR_DIRECCION",
        String.valueOf((tabla.getSimbolo(id)).getDireccion()), null, String.valueOf(cuentaDirecciones)));
        return new Expresion(cuentaDirecciones);
    }
    
